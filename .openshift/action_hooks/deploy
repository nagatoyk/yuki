#!/bin/bash
upload_dir=${OPENSHIFT_DATA_DIR}
current_version=$(cat ${OPENSHIFT_BUILD_DEPENDENCIES_DIR}.current_version)
install_dir=${OPENSHIFT_BUILD_DEPENDENCIES_DIR}${current_version}
if [ ! -d "${upload_dir}" ]; then
  mkdir -p $upload_dir
  cp -rf ${install_dir}/* ${upload_dir}/
fi
if [ -d ${OPENSHIFT_REPO_DIR}uploads ]; then
  rm -rf ${OPENSHIFT_REPO_DIR}uploads
fi
ln -sf ${upload_dir} ${OPENSHIFT_REPO_DIR}uploads
if [ ! -d ${OPENSHIFT_DATA_DIR}uploads ]; then
  mv ${upload_dir}/uploads ${OPENSHIFT_DATA_DIR}plugins
fi
echo "Copying Uploads from .openshift/uploads"
cp -rf $OPENSHIFT_REPO_DIR/.openshift/uploads/* ${OPENSHIFT_DATA_DIR}uploads/ 2>/dev/null